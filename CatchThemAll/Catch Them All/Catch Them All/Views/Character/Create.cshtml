@model PokeDex.Models.Character
<h2>Create a Pokemon</h2>
<hr/>
<form asp-action="Create" asp-controller="Character">
    <div class="form-horizontal">
        <h4>Pokemon</h4>
        <hr />
        <div class="form-group">
            <div class="row">
                <label class="control-lable col-md-2" asp-for="Name">Name</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="Name" name="Name" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="control-lable col-md-2" asp-for="IsActive">Is Active</label>
                <div class="col-md-10">
                    <input class="form-control" type="checkbox" id="IsActive" name="IsActive"/>
                </div>
            </div>
        </div>
    </div>
</form>